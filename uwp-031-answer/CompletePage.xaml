<Page
    x:Class="UWP开发入门.CompletePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP开发入门"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image HorizontalAlignment="Left" Source="Assets/color-logo.png" Width="240" Height="180"/>
        <Image Grid.Row="1" Source="Assets/ticket.jpg" Width=" 400" Height="400"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Order" Style="{StaticResource HeaderTextBlockStyle}" FontWeight="SemiBold" Canvas.ZIndex="1"/>
            <TextBlock Text=" 96" Style="{StaticResource HeaderTextBlockStyle}" FontSize="72" FontWeight="SemiBold" Canvas.ZIndex="2"/>
        </StackPanel>
    </Grid>
</Page>
